{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A dual-axis chart to compare population growth and housing approvals by state over time, with a state selection dropdown.",
  "config": {
    "title": {"font": "Playfair Display, serif", "fontSize": 20},
    "axis": {"labelFont": "Roboto, sans-serif", "titleFont": "Roboto, sans-serif","grid": true},
    "legend": {"labelFont": "Roboto, sans-serif", "titleFont": "Roboto Slab, serif"}
  },
  
  "width": "container",
  "height": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/Alucardigan/Data_Viz_A2/refs/heads/main/data/HousingApprovalsVSPopulation.csv"
  },
  "title": {
    "text": "Australian Population vs Housing Construction Approvals",
    "subtitle": "Comparison of the growth of the Australian population and new housing contruction from 2003 to 2020",
    "subtitleFont": "Roboto, sans-serif",
    "subtitleFontSize": 14
  },
  "params": [
    {
      "name": "state_selection",
      "bind": {
        "input": "select",
        "options": [
          "Australia",
          "Australian Capital Territory",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Tasmania",
          "Victoria",
          "Western Australia"
        ],
        "name": "Select State: "
      },
      "value": "Australia"
    }
  ],
  "transform": [
    {
      "filter": "datum.State == state_selection"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {"title": "Year"}
        },
        "y": {
          "field": "Population",
          "type": "quantitative",
          "axis": {"title": "Population ", "titleColor": "#7E57C2"}
        },
        "color": {
          "value": "#7E57C2"
        },
        "tooltip": [
          {"field": "Year", "type": "temporal", "title": "Year"},
          {"field": "Population", "type": "quantitative", "title": "Population"}
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2,
        "point": true
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {
            "grid": true
          }
        },
        "y": {
          "field": "Housing Approvals",
          "type": "quantitative",
          "axis": {
            "title": "Housing Approvals",
            "titleColor": "#26A69A",
            "grid": true
          }
        },
        "color": {
          "value": "#26A69A"
        },
        "tooltip": [
          {"field": "Year", "type": "temporal", "title": "Year"},
          {"field": "Housing Approvals", "type": "quantitative", "title": "Housing Approvals"}
        ]
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {
          "datum": 0,
          "type": "quantitative"
        },
        "color": {
          "value": "#000000"
        }
      }
    },
    {
      "data": {
        "values": [
          {"year": "2008-01-01", "label": "Changes to FIRB"}
        ]
      },
      "mark": {"type": "rule", "strokeDash": [2, 2], "size": 2},
      "encoding": {
        "x": {"field": "year", "type": "temporal"},
        "color": {"value": "black"}
      }
    },
    {
      "data": {
        "values": [
          {"year": "2008-01-01", "label": "Changes to FIRB"}
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "font": "Nunito Sans",
        "fontSize": 10
      },
      "encoding": {
        "x": {"field": "year", "type": "temporal"},
        "text": {"field": "label", "type": "nominal"},
        "color": {"value": "black"}
      }
    },
    {
      "data": {
        "values": [
          {"year": "2019-01-01", "label": "Covid 19"}
        ]
      },
      "mark": {"type": "rule", "strokeDash": [2, 2], "size": 2},
      "encoding": {
        "x": {"field": "year", "type": "temporal"},
        "color": {"value": "black"}
      }
    },
    {
      "data": {
        "values": [
          {"year": "2019-01-01", "label": "Covid 19"}
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "font": "Nunito Sans",
        "fontSize": 10
      },
      "encoding": {
        "x": {"field": "year", "type": "temporal"},
        "text": {"field": "label", "type": "nominal"},
        "color": {"value": "black"}
      }
    }
  ],
  "resolve": {
    "scale": {
      "y": "independent"
    }
  }
}