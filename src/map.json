{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A map of Australia showing rental prices by state.",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Alucardigan/Data_Viz_A2/main/data/MedianHousePricesByState.csv"
  },
  "transform": [
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Alucardigan/Data_Viz_A2/main/data/AustralianMapWithBorders.json",
          "format": {
            "type": "topojson",
            "feature": "ne_50m_admin_1_states_provinces"
          }
        },
        "key": "properties.name",
        "fields": ["type", "geometry"]
      }
    },
    {
      "filter": "yearSelect == datum.Year"
    }
  ],
  "params": [
    {
      "name": "yearSelect",
      "bind": {
        "input": "range",
        "min": 2002,
        "max": 2024,
        "step": 1,
        "name": "Select Year:"
      },
      "value":2024
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "MedianHousingPrice",
      "type": "quantitative",
      "scale": {
        "domain": [0, 1200]
      }
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "MedianHousingPrice", "type": "quantitative", "title": "Median Price"},
      {"field": "Year", "type": "quantitative", "title": "Year"}
    ]
  }
}
