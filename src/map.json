{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A map of Australia showing rental prices by state.",
  "width": 600,
  "height": 400,
  "data": {
    "url": "data/AustralianMapWithBorders.json",  
    "format": {
      "type": "topojson",
      "feature": "ne_50m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "data/MedianHousePricesByState.csv"
        },
        "key": "State",
        "fields": ["Median Housing Price", "Date"]  
      }
    }
  ],
  "projection": {
    "type": "mercator"  
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "Median Housing Price",
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "Median Housing Price", "type": "quantitative", "title": "Median Price"},
      {"field": "Date", "type": "temporal", "title": "Date"} 
    ]
  }
}