{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "hconcat": [
    {
      "width": "container",
      "height": 400,
      "title": {
        "text": "Housing Affordability",
        "font": "Nunito Sans"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/Alucardigan/Data_Viz_A2/refs/heads/main/data/housingAffordability.csv"
      },
      "transform": [
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Alucardigan/Data_Viz_A2/main/data/AustralianMapWithBorders.json",
              "format": {
                "type": "topojson",
                "feature": "ne_50m_admin_1_states_provinces"
              }
            },
            "key": "properties.name",
            "fields": ["type", "geometry"]
          }
        },
        {
          "filter": "datum.Year == yearSelect"
        }
      ],
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "HousingAffordability",
          "type": "quantitative",
          "scale": {
            "domain": [0, 15]
          },
          "legend": {
            "format": "~s",
            "labelFont": "Nunito Sans",
            "title": "Affordability",
            "titleFont": "Nunito Sans"
          }
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "MedianHousingPrice", "type": "quantitative", "title": "Housing Price"},
          {"field": "MedianIncome", "type": "quantitative", "title": "Median Income"},
          {"field": "HousingAffordability", "type": "quantitative", "title": "Affordability"},
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    },
    {
      "width": 200,
      "height": 400,
      "title": "Income Distribution",
      "data": {
        "url": "https://raw.githubusercontent.com/Alucardigan/Data_Viz_A2/refs/heads/main/data/TenureOverTime.csv"
      },
      "transform": [
        {
          "filter": "datum.Year == yearSelect"
        }
      ],
      "mark": {
        "type": "arc",
        "innerRadius": 50
      },
      "encoding": {
        "theta": {
          "field": "%",
          "type": "quantitative",
          "stack": true
        },
        "color": {
          "field": "Tenure type",
          "type": "nominal",
          "title": "Tenure type"
        },
        "tooltip": [
          {"field": "Tenure type", "type": "nominal", "title": "Tenure type"},
          {"field": "%", "type": "quantitative", "title": "Percentage"},
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    }
  ],
  "params": [
    {
      "name": "yearSelect",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2002,
        "max": 2020,
        "step": 1,
        "name": "Select Year:"
      }
    }
  ]
}